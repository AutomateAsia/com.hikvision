        "actions": [
            {
                "id":"zoom",
                "title": {
                    "en": "Zoom in/out",
                    "nl": "In/Uit zoomen",
					"de": "Rein-Rauszoomen"
                },
                "args": [
                    {
                        "name": "zoomnumber",
                        "type": "number",
                        "min": -100,
                        "max": 100,
                        "step": 1,
                        "placeholder": {
                            "en": "Zoom number",
                            "nl": "Zoom nummer"
                        }                        
                    },
				    {
                        "name": "channel",
                        "type": "number",
                        "min": 0,
                        "max": 36,
                        "step": 1,
						"default": 0,
                        "placeholder": {
                            "en": "Channel-ID",
                            "nl": "Channel-ID",
							"de": "Channel-ID"
                        }                        
                    },
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=hikvision-camnvr"
                    }
                  ]   
            }
        ]
    },
    "drivers": [
        {
            "id": "hikvision-camnvr",
            "class": "sensor",
            "capabilities": ["hik_type","hik_version"],
            "name": {
                "en": "Hikvision Camera",
                "nl": "Hikvision Camera",
				"nl": "Hikvision Kamera"
            },
            "images": {
                "large": "/drivers/hikvision-camnvr/assets/images/large.png",
                "small": "/drivers/hikvision-camnvr/assets/images/small.png"
            },
			"pair": [
				{
					"id": "start"
				}
			],
            "settings": [
                {
                    "type": "group",
                    "label": {
						"en": "Hikvision Camera settings",
						"nl": "Hikvision Camera instellingen",
						"de": "Hikvision Kamera Einstellungen"
                    },
                    "children": [
                        {
							"id": "address",
							"type": "text",
							"value": "0.0.0.0",
							"label": {
								"en": "IP Address",
								"nl": "IP adres",
								"de": "IP Adresse"
							}
                        },
                        {
                            "id": "username",
                            "type": "text",
                            "label": {
                                "en": "Username",
                                "nl": "Gebruikersnaam",
								"de": "Benutzername"
                            },
                            "value": "admin",
                            "hint": {
                                "en": "Username of the ip camera",
                                "nl": "Gebruikersnaam van de camera",
								"de": "Benutzername der IP Kamera"
                            }
                        },
                        {
                            "id": "password",
                            "type": "password",
                            "label": {
                                "en": "Password",
                                "nl": "Wachtwoord",
								"de": "Passwort"
                            },
                            "value": "",
                            "hint": {
                                "en": "Password of the ip camera",
                                "nl": "Wachtwoord van de camera",
								"de": "Passwort der IP Kamera"
                            }
                        },
						{
                            "id": "port",
                            "type": "number",
                            "label": {
                                "en": "Port",
                                "nl": "Port",
								"de": "Port"
                            },
                            "value": 80
                        },
							{
                            "id": "ssl",
                            "type": "checkbox",
                            "label": {
                                "en": "SSL",
                                "nl": "SSL",
								"de": "SSL"
                            },
                            "value": false
                        },
												{
                            "id": "strict",
                            "type": "checkbox",
                            "label": {
                                "en": "Strict",
                                "nl": "Strict",
								"de": "Strict"
                            },
                            "value": false
                        }
						      
                    ]
                }           
            ]
        }
    ]
